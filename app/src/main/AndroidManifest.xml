<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.decouikit.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:name=".activities.NewsApplication"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/SplashTheme"
            tools:ignore="GoogleAppIndexingWarning">

        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="@string/application_ad_id" />

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />

        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="deconews.decouikit.com" android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.common.NavigationActivity"/>
        <activity
            android:name=".activities.common.BottomNavigationActivity"/>
        <activity
            android:name=".activities.PostActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".activities.CommentsActivity"/>
        <activity
            android:name=".activities.PostCommentActivity"/>
        <activity
            android:name=".activities.ViewAllActivity"/>

        <service android:name=".firebase.MyFirebaseMessagingService"
                tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>