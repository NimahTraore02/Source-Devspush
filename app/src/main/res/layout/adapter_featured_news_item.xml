<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/featured_news_height"
        app:cardCornerRadius="@dimen/normal_padding"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivItemBg"
                android:background="@color/colorBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/screen_padding"
                android:background="@drawable/rounded_red_bg"
                android:padding="@dimen/small_padding"
                android:text="Technology"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/screen_padding"
                android:layout_marginTop="@dimen/screen_padding"
                android:background="@drawable/ic_bookmark"/>


        <TextView
                android:id="@+id/tvItemTitle"
                style="@style/TitleTextStyle"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_margin="@dimen/screen_padding"
                app:layout_constraintBottom_toTopOf="@+id/tvItemDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="@dimen/screen_padding"
                android:paddingEnd="@dimen/screen_padding"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="World voyage delivers 'memories to last a lifetime' 2019 World voyage delivers 'memories to last a lifetime' 2019 World voyage delivers 'memories to last a lifetime' 2019"/>

        <TextView
                android:id="@+id/tvItemDate"
                style="@style/DateTextStyle"
                android:text="12 May 2019"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginBottom="@dimen/screen_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 comments"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="@dimen/small_padding"
                android:textSize="@dimen/text_size_14sp"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginBottom="@dimen/screen_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvItemDate"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>