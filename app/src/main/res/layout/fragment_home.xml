<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/homeTab"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorHeader"
        app:tabPaddingStart="@dimen/larger_padding"
        app:tabPaddingEnd="@dimen/larger_padding"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabSelectedTextColor="?attr/colorTitleText"
        app:tabTextColor="@color/colorSubTitleText"
        app:tabIndicatorColor="?attr/colorTitleText"
        app:tabIndicatorHeight="@dimen/tab_indicator_height"
        app:tabMode="scrollable"
        android:elevation="@dimen/small_padding">
    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/frmHomePlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>