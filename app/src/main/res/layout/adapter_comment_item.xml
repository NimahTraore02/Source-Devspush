<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/normal_padding"
    android:layout_marginEnd="@dimen/normal_padding"
    app:cardUseCompatPadding="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardElevation="@dimen/small_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorHeader"
        android:padding="@dimen/normal_padding">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_account_circle_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            style="@style/TitleTextStyle"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginStart="@dimen/normal_padding"
            android:text="George Dean"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCommentDate"
            style="@style/ViewAllTextStyle"
            android:layout_marginStart="@dimen/normal_padding"
            android:text="12 May 2019"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCommentText"
            style="@style/ViewAllTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_marginTop="@dimen/normal_padding"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            android:text="Chatting with the barrista at my favourite Crouch End cafÃ© this morning stirred a thought. Nigel Slater's dumbing-down of cookery means he rarely uses any of the interesting ingredients in my local deli. The left needs to unite and stop letting the neo-fascists talk down to us."/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>