<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkBg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorHeader">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimaryDarkBg</item>
        <item name="colorTitleText">@color/colorWhite</item>
        <item name="colorButtonText">@color/colorPrimaryDark</item>
        <item name="colorButtonPressed">@color/colorMenuItem</item>
        <item name="postBg">@color/colorPrimaryDarkBg</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkBg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorHeader">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorLightBg</item>
        <item name="colorTitleText">@color/colorPrimaryDark</item>
        <item name="colorButtonText">@color/colorWhite</item>
        <item name="colorButtonPressed">@color/colorPrimaryDarkBg</item>
        <item name="postBg">@color/colorLightBg</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkBg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarIconColor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorSecondary">@color/colorSubTitleText</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?attr/colorTitleText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/navigation_title</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">?attr/colorTitleText</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ViewAllTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorSubTitleText</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="DateTextStyle" parent="ViewAllTextStyle">
        <item name="android:drawableStart">@drawable/ic_clock</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommentTextStyle" parent="ViewAllTextStyle">
        <item name="android:drawableStart">@drawable/ic_comment</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/colorTitleText</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TagTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_red_bg</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@drawable/rounded_primary_bg</item>
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">?attr/colorTitleText</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:elevation">@dimen/small_padding</item>
        <item name="android:textColor">@color/colorSubTitleText</item>
        <item name="android:textColorHint">@color/colorSubTitleText</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">@dimen/large_padding</item>
        <item name="android:paddingEnd">@dimen/large_padding</item>
        <item name="android:layout_margin">@dimen/normal_padding</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CommentsEditTextTheme">
        <item name="colorAccent">@color/colorSubTitleText</item>
    </style>


    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/colorSubTitleText</item>
        <item name="android:buttonTint">@color/colorBlue</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:editTextColor">@color/icon_gray</item>
        <item name="android:textColorHint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/icon_gray</item>
        <item name="colorAccent">?attr/colorTitleText</item>
    </style>

    <style name="PostTagTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>

    <style name="SettingsChooserTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTitleText</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down_24dp</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SettingsChooserIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>
</resources>
